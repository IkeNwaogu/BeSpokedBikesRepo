@page
@model BeSpokedBikes.Pages.ProductsPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Products.ID" />
            <div class="form-group">
                <label asp-for="Products.Name" class="control-label"></label>
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Manufacturer" class="control-label"></label>
                <input asp-for="Products.Manufacturer" class="form-control" />
                <span asp-validation-for="Products.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Style" class="control-label"></label>
                <input asp-for="Products.Style" class="form-control" />
                <span asp-validation-for="Products.Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.PurchasePrice" class="control-label"></label>
                <input asp-for="Products.PurchasePrice" class="form-control" />
                <span asp-validation-for="Products.PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.SalePrice" class="control-label"></label>
                <input asp-for="Products.SalePrice" class="form-control" />
                <span asp-validation-for="Products.SalePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.QtyOnHand" class="control-label"></label>
                <input asp-for="Products.QtyOnHand" class="form-control" />
                <span asp-validation-for="Products.QtyOnHand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.CommissionPercentage" class="control-label"></label>
                <input asp-for="Products.CommissionPercentage" class="form-control" />
                <span asp-validation-for="Products.CommissionPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                 @if (ViewData["Redirect"] != null)
            {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewData["Message"]");
                };
            </script>
            }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
